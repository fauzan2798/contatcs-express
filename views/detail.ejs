<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Contact</h2>
            <% if (!contact) { %>
                <div class="alert alert-danger" role="alert">
                    Contact not found!. <br>
                    <a href="/contact" class="alert-link fw-normal">Kembali ke daftar kontak</a>
                  </div>
            <% } else { %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= contact.nama %></h5>
                  <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.nohp %></h6>
                  <p class="card-text"><%= contact.email %></p>
                  <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger badge" onclick="return confirm('Yakin??')">hapus</a>
                  <a href="/contact" class="card-link d-block mt-3">Back to list concact</a>
                </div>
              </div>
            <% } %>
        </div>
    </div>
</div>